<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_hello1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello 1"
        android:layout_alignParentTop="true"
        />

    <TextView
        android:id="@+id/tv_hello2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello 2"
        android:layout_alignBottom="@id/tv_hello1"
        android:layout_centerInParent="true"
        />

    <TextView
        android:id="@+id/tv_hello3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello 3"
        android:layout_alignBottom="@id/tv_hello1"
        android:layout_alignParentRight="true"
        />

    <TextView
        android:id="@+id/tv_hello4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello 4"
        android:layout_centerVertical="true"
        />

    <TextView
        android:id="@+id/tv_hello5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello 5"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        />

    <TextView
        android:id="@+id/tv_hello6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello 6"
        android:layout_centerInParent="true"
        />

    <TextView
        android:id="@+id/tv_hello7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello 7"
        android:layout_alignParentBottom="true"
        />

    <TextView
        android:id="@+id/tv_hello8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello 8"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        />

    <TextView
        android:id="@+id/tv_hello9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello 9"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello"
        />

</RelativeLayout>