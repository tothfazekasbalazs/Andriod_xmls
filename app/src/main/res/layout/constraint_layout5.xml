<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    >

    <ImageView
        android:id="@+id/iw_kep2"
        android:layout_width="150sp"
        android:layout_height="150sp"
        android:src="@android:drawable/ic_menu_camera"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30sp"
        />

    <Button
        android:id="@+id/bt_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Image"
        app:layout_constraintTop_toBottomOf="@id/iw_kep2"
        app:layout_constraintStart_toStartOf="@id/iw_kep2"
        app:layout_constraintEnd_toEndOf="@id/iw_kep2"
        android:backgroundTint="#FC9900"
        />

    <EditText
        android:id="@+id/et_1"
        android:layout_width="240sp"
        android:layout_height="wrap_content"
        android:hint="Full name: "
        app:layout_constraintTop_toTopOf="@id/iw_kep2"
        app:layout_constraintStart_toEndOf="@id/iw_kep2"
        android:background="@android:drawable/edit_text"

        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tw_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email: "
        app:layout_constraintTop_toBottomOf="@id/et_1"
        app:layout_constraintStart_toEndOf="@id/iw_kep2"
        android:paddingTop="10sp"
        android:paddingBottom="10sp"
        />

    <EditText
        android:id="@+id/et_2"
        android:layout_width="240sp"
        android:layout_height="wrap_content"
        android:hint="Enter your email: "
        app:layout_constraintTop_toBottomOf="@id/tw_1"
        app:layout_constraintStart_toEndOf="@id/iw_kep2"
        android:background="@android:drawable/edit_text"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tw_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone: "
        app:layout_constraintTop_toBottomOf="@id/et_2"
        app:layout_constraintStart_toEndOf="@id/iw_kep2"
        android:paddingTop="10sp"
        android:paddingBottom="10sp"
        />
    <EditText
        android:id="@+id/et_3"
        android:layout_width="240sp"
        android:layout_height="wrap_content"
        android:hint="Enter your phone number"
        app:layout_constraintTop_toBottomOf="@id/tw_2"
        app:layout_constraintStart_toEndOf="@id/iw_kep2"
        android:background="@android:drawable/edit_text"

        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tw_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adress: "
        android:layout_marginTop="20sp"
        app:layout_constraintTop_toBottomOf="@id/bt_1"
        app:layout_constraintStart_toStartOf="parent"
        />
    <EditText
        android:id="@+id/et_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your adress: "
        app:layout_constraintTop_toBottomOf="@id/tw_3"
        app:layout_constraintStart_toEndOf="@id/iw_kep2"
        android:background="@android:drawable/edit_text"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/bt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        app:layout_constraintTop_toBottomOf="@id/et_4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="#2196F3"
        android:layout_marginTop="30sp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        app:layout_constraintTop_toBottomOf="@id/et_4"
        app:layout_constraintStart_toEndOf="@id/bt2"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="#F44333"
        android:layout_marginTop="30sp"

        />






</androidx.constraintlayout.widget.ConstraintLayout>